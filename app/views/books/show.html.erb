<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
        <%= image_tag current_user.get_profile_image(100,100) %>
            <table class="table">
              <tbody>
                <tr></tr>
                <tr>
  	              <th>name</th>
  	              <th><%= @book.user.name %></th>
                </tr>
                <tr>
            	    <th>introduction</th>
            	    <th><%= @book.user.introduction %></th>
                </tr>
                  <tr>
    <th>follows</th>
    <th><%= link_to @book.user.followings.count, user_followings_path(@book.user) %></th>
  </tr>
  <tr>
    <th>followers</th>
    <th><%= link_to @book.user.followers.count, user_followers_path(@book.user) %></th>
  </tr>
  <tr><td><%= render "relationships/button", user: @book.user, options: { class: "follow-link" } %></td></tr>
              </tbody>
            </table>
      <h2 class="mt-3">New book</h2>
        <%= form_with model: @book_new, local:true do |f| %>
          <%= f.label :title %>
          <%= f.text_field :title, class: 'form-control book_title' %>
          <%= f.label :opinion %>
          <%= f.text_area :body, class: 'form-control book_body' %>
           <% if @book_new.id.nil? %>
    <div class="form-group" id="star">
      <%= f.label :star %>
      <%= f.hidden_field :star, id: :review_star, class: 'form-control' %>
      <div id="post_raty"></div>
    </div>
    <script>
      $(document).on('turbolinks:load', function() {
        let elem = document.querySelector('#post_raty');
        if (elem == null) return;
  
        elem.innerHTML = ""
        let opt = {  
          starOn: "<%= asset_path('star-on.png') %>",
          starOff: "<%= asset_path('star-off.png') %>",
          starHalf: "<%= asset_path('star-half.png') %>",
          scoreName: 'book[star]',
        };
        raty(elem, opt);
      });
    </script>
  <% else %>
    <div class="form-group">
      <%= render "static_rate", book: @book_new %>
    </div>
  <% end %>
          <%= f.submit class: 'btn btn-success' %>
        <% end %>
      </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<table class='table'>
  		  <tr>
          <td><%= link_to(@book.user) do %>
            <%= image_tag @book.user.get_profile_image(50, 50)%><br>
            <%= @book.user.name %>
            <% end %>
          </td>
          <td><%= link_to @book.title, @book %></td>
          <td><%= @book.body %></td>
            <td><%= link_to 'Edit', edit_book_path(@book), class: "btn btn-sm btn-success" %></td>
            <td><%= link_to 'Destroy', @book, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger"%></td>
            <td>閲覧数: <%= @book.view_counts.count %></td>
            <td><%= render "books/static_rate", book: @book %></td>
        </tr>
      </table>
      <div id="comment_index">
        <%= render "books/comment", book: @book %>
      </div>
      <div id="comment-form">
        <%= render "book_comments/form" , { book: @book , book_comment: @book_comment } %>
      </div>
    </div>
  </div>
</div>