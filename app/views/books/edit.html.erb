<h2>Book info</h2>
<h3>Editing Book</h3>
<%= form_with model: @book do |f| %>
  <h4 class="mt-3">Image</h4>
  <%= f.file_field :image, class: "col-xs-12", accept: "image/*" %>
  <h4 class="mt-3">Title</h4>
  <%= f.text_field :title %>
  <h4 class="mt-3">Body</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Update Book', class: "btn btn-success" %>
<% end %>
<%= link_to "Back", books_path %>
<%= link_to "Show", book_path(@book) %>