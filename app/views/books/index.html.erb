  <body class="d-flex flex-column vh-100">
     <% if @book.errors %>
      <ul>
      <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
      </ul>
      <% end %>
    <main class="mb-auto">

      <div class="container">
        <div class="row">
<div class="col-md-3">
      <h2>User info</h2>
      <%= image_tag current_user.get_profile_image(100,100) %>
<table class="table">
  <tbody><tr></tr>
  <tr>
	  <th>name</th>
	  <th><%= @user.name %></th>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th><%= @user.introduction %></th>
  </tr>
    <tr>
    <th>follows</th>
    <th><%= link_to @user.followings.count, user_followings_path(@user) %></th>
  </tr>
  <tr>
    <th>followers</th>
    <th><%= link_to @user.followers.count, user_followers_path(@user) %></th>
  </tr>
</tbody></table>

<div class="row">
  <a class="btn btn-outline-secondary btn-block" href="<%= edit_user_path(current_user.id) %>"><i class="fas fa-user-cog"></i></a></div>
  <h2 class="mt-3">New book</h2>
  <%= form_with model: @book do |f| %>
  <h4 class="mt-3">Title</h4>
  <%= f.text_field :title %>
  <h4 class="mt-3">Opinion</h4>
  <%= f.text_area :body %>
   <% if @book.id.nil? %>
    <div class="form-group" id="star">
      <%= f.label :star %>
      <%= f.hidden_field :star, id: :review_star, class: 'form-control' %>
      <div id="post_raty"></div>
    </div>
    <script>
      $(document).on('turbolinks:load', function() {
        let elem = document.querySelector('#post_raty');
        if (elem == null) return;
  
        elem.innerHTML = ""
        let opt = {  
          starOn: "<%= asset_path('star-on.png') %>",
          starOff: "<%= asset_path('star-off.png') %>",
          starHalf: "<%= asset_path('star-half.png') %>",
          scoreName: 'book[star]',
        };
        raty(elem, opt);
      });
    </script>
  <% else %>
    <div class="form-group">
      <%= render "static_rate", book: @book %>
    </div>
  <% end %>
  <div class="form-group">
  <label>Category</label>
  <%= f.text_field :category,class: 'form-control book_category' %>
</div>
  <%= f.submit 'Create Book', class: "btn btn-success" %>
  <% end %>
    </div>
    <div class="col-md-8 offset-md-1">
  		<h2>Books</h2>
      <%= link_to '新しい順', books_path(latest: "true") %>
      <%= link_to '古い順', books_path(old: "true") %>
      <%= link_to '評価の高い順', books_path(star_count: "true") %>
<table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th>Likes</th>
      <th>Comments</th>
      <th colspan="4"></th>
    </tr>
  </thead>
  <tbody>
      <% @books.each do |book| %>
      <tr>
        <td><a href="<%= user_path(book.user_id) %>">
          <%= image_tag book.user.get_profile_image(60,60) %>
        </td>
        <td><a href="<%= book_path(book.id) %>"><%= book.title %></a></td>
        <td><%= book.body %></td>
    <td id="favorite_button_<%= book.id %>"> 
      <%= render "books/favorites", book: book %>
    </td>
    <td>
      <%= render "books/count", book: book %>
    </td>
    <td>閲覧数: <%= book.view_counts.count %></td>
    <td><%= render "books/static_rate", book: book %></td>
    <td><%= book.created_at %></td>
    <td>
      <% if book.category.present? %>
        <%=link_to book.category,tagsearches_search_path(content:book.category)%>
      <% end %>
</td>
      </tr>
      <% end %>
  </tbody>
</table>
    </main>
  </body>
</html>
